<div class="forecast-container clearfix">
	<div class="day">Today</div>
	<div class="thumb">
		<img src="[[+current_observation.icon_url]]" alt="">
	</div>
	<div class="forecast-info">
		<div class="location">[[+current_observation.display_location.city]],[[+current_observation.display_location.state]]</div>
		<div class="temperature"> [[+current_observation.temp_f]]&#8457; ([[+current_observation.temp_c]]&#8451;)</div>
		<div class="weather">[[+current_observation.weather]]</div>
	</div>
</div>
